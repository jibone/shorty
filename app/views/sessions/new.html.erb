<%= render(HeaderComponent.new(@current_user)) %>


<div class="flex mt-16 space-x-2">
  <div class="w-1/2">
    <h1 class="text-2xl font-extrabold mb-4">Login to account</h1>

    <% if flash[:error] %>
      <div class="px-2 py-3 mb-4 bg-red-50 text-red-900 border border-red-200 rounded-lg">
        <%= flash[:error] %>
      </div>
    <% end %>

    <div>
      <%= form_with url: user_login_path, local: true, data: { turbo: "false" } do |form| %>
        <div class="flex flex-col space-y-6">
          <div class="flex flex-col space-y-2 w-3/6">
            <%= form.label :username %>
            <%= form.text_field :username, autofocus: true, class: "rounded-lg" %>
          </div>
          <div class="flex flex-col space-y-2 w-3/6">
            <%= form.label :password %>
            <%= form.password_field :password, class: "rounded-lg" %>
          </div>
          <div class="flex space-y-2 w-3/6">
            <%= form.label :remember_me, "Remember me" %>
            <%= form.check_box :remember_me, value: '1', class: "ml-2" %>
          </div>
          <div class="flex flex-col space-y-2">
            <%= form.submit "Log in", class: "w-fit px-4 py-2 bg-gray-900 text-gray-100 hover:bg-gray-700 rounded-lg cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6">
      <%= link_to "Sign up", new_users_path, class: "text-indigo-600" %> if you don't have an account.
    </div>
  </div>
</div>
